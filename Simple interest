# Function to calculate simple interest
def calculate_simple_interest(principal, rate, time):
    # Calculate the simple interest
    simple_interest = (principal * rate * time) / 100
    return simple_interest

# Input principal amount, rate, and time (you can change these values)
principal_amount = float(input("Enter the principal amount: "))
rate_of_interest = float(input("Enter the rate of interest (per year): "))
time_period = float(input("Enter the time period (in years): "))

# Calculate simple interest
interest = calculate_simple_interest(principal_amount, rate_of_interest, time_period)

# Display the result
print("Simple Interest:", interest)
